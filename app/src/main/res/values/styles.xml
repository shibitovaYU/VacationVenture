<resources>
    <!-- Base application theme for light mode -->
    <style name="Base.Theme.VacationVenture" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/darkblue</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <style name="Theme.YourApp" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Установка основного шрифта -->
        <item name="android:fontFamily">@font/ubuntu_condensed</item>
        <item name="fontFamily">@font/ubuntu_condensed</item>
    </style>

    <style name="WhiteButtonWithBorder" parent="Widget.Material3.Button">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/darkblue</item>
        <item name="strokeColor">@color/darkblue</item>
        <item name="strokeWidth">2dp</item>
        <item name="shapeAppearance">@style/ShapeAppearance.WhiteButtonWithBorder</item>
    </style>

    <style name="ShapeAppearance.WhiteButtonWithBorder" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="CustomThemeForActivity" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/blue</item>
        <item name="colorOnPrimary">@color/darkblue</item>
    </style>

    <!-- Основной стиль DatePicker -->
    <style name="CustomDatePicker" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="android:datePickerStyle">@style/CustomDatePickerStyle</item>
        <item name="android:buttonStyle">@style/CustomButtonStyle</item>
        <item name="colorAccent">@color/blue</item> <!-- Цвет акцента, например, для выбранного числа -->
    </style>

    <!-- Настройка стиля для DatePicker -->
    <style name="CustomDatePickerStyle" parent="Widget.MaterialComponents.MaterialCalendar">
        <item name="android:calendarViewShown">true</item>
        <item name="android:calendarTextColor">@color/blue</item> <!-- Цвет текста чисел -->
        <item name="android:headerBackground">@color/white</item> <!-- Фон заголовка -->
        <item name="android:textColorPrimary">@color/darkblue</item> <!-- Цвет текста заголовка -->
        <item name="android:textColorSecondary">@color/darkblue</item> <!-- Цвет текста года и дня -->
        <item name="android:background">@color/white</item> <!-- Фон всего DatePicker -->
        <item name="android:colorAccent">@color/blue</item> <!-- Цвет акцента -->
    </style>

    <!-- Настройка стиля для кнопок -->
    <style name="CustomButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/blue</item> <!-- Цвет фона кнопок -->
        <item name="android:textColor">@color/white</item> <!-- Цвет текста кнопок -->
    </style>
    <style name="Theme.VacationVenture" parent="Base.Theme.VacationVenture" />
</resources>
