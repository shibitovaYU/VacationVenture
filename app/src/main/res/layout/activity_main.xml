<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/blue">

    <LinearLayout
        android:id="@+id/title_icons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/title"
            android:layout_width="309dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:fontFamily="@font/jockey_one"
            android:gravity="center"
            android:text="VACATION VENTURE"
            android:textColor="@android:color/white"
            android:textSize="58sp" />

        <LinearLayout
            android:id="@+id/icons_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.493"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title"
            android:gravity="center"
            android:layout_marginTop="20dp">

            <ImageButton
                android:id="@+id/button_flight"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="8dp"
                android:background="@drawable/button_selector"
                android:src="@drawable/ic_plane" />

            <ImageButton
                android:id="@+id/button_train"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="8dp"
                android:background="@drawable/button_selector"
                android:src="@drawable/ic_train" />

            <ImageButton
                android:id="@+id/button_home"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="8dp"
                android:background="@drawable/button_selector"
                android:src="@drawable/ic_home" />

            <ImageButton
                android:id="@+id/button_food"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="8dp"
                android:background="@drawable/button_selector"
                android:src="@drawable/ic_food" />

            <ImageButton
                android:id="@+id/button_enter"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="8dp"
                android:background="@drawable/button_selector"
                android:src="@drawable/ic_enter" />
        </LinearLayout>
    </LinearLayout>


    <TextView
        android:id="@+id/home_recommendation_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/inform_border"
        android:padding="12dp"
        android:text="Подбираем персональную рекомендацию..."
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_icons" />

    <LinearLayout
        android:id="@+id/flight_train_layout"
        android:layout_width="411dp"
        android:layout_height="270dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.461"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/home_recommendation_text">

        <AutoCompleteTextView
            android:id="@+id/input_departure"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:background="@drawable/inform_border"
            android:hint="Откуда"
            android:padding="8dp"
            android:textColor="@color/black"
            android:textColorHint="@color/grey"/>

        <AutoCompleteTextView
            android:id="@+id/input_arrival"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/inform_border"
            android:hint="Куда"
            android:padding="8dp"
            android:textColor="@color/black"
            android:textColorHint="@color/grey" />

        <LinearLayout
            android:layout_width="365dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="8dp"
            app:layout_constraintTop_toBottomOf="@id/title_icons">

            <EditText
                android:id="@+id/input_departure_date"
                android:layout_width="20dp"
                android:layout_height="50dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/inform_border"
                android:clickable="true"
                android:focusable="false"
                android:hint="Когда"
                android:onClick="showDatePickerDeparture"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textColorHint="@color/grey"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/hotel_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/home_recommendation_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.461"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:layout_marginTop="20dp">

        <AutoCompleteTextView
            android:id="@+id/input_city"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:hint="Город"
            android:padding="8dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/inform_border"
            android:textColor="@color/black"
            android:textColorHint="@color/grey"/>

        <LinearLayout
            android:layout_width="365dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="8dp"
            app:layout_constraintTop_toBottomOf="@id/title_icons">

            <EditText
                android:id="@+id/input_checkin_date"
                android:layout_width="20dp"
                android:layout_height="50dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/inform_border"
                android:clickable="true"
                android:focusable="false"
                android:hint="Заезд"
                android:onClick="showDatePickerDeparture"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textColorHint="@color/grey" />

            <EditText
                android:id="@+id/input_checkout_date"
                android:layout_width="20dp"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@drawable/inform_border"
                android:clickable="true"
                android:focusable="false"
                android:hint="Выезд"
                android:onClick="showDatePickerReturn"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textColorHint="@color/grey"/>

        </LinearLayout>

        <EditText
            android:id="@+id/input_visitors"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:hint="Посетители"
            android:padding="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/inform_border"
            android:textColor="@color/black"
            android:textColorHint="@color/grey"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/restaurant_event_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/home_recommendation_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:layout_marginTop="20dp">

        <AutoCompleteTextView
            android:id="@+id/input_city_restaurant_event"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:hint="Город"
            android:padding="8dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/inform_border"
            android:textColor="@color/black"
            android:textColorHint="@color/grey"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/entertainment_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/home_recommendation_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:layout_marginTop="20dp">

        <AutoCompleteTextView
            android:id="@+id/input_city_entertainment"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:hint="Город"
            android:padding="8dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/inform_border"
            android:inputType="text"
            android:textColor="@color/black"
            android:textColorHint="@color/grey"/>

        <EditText
            android:id="@+id/input_date_entertainment"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:hint="Дата"
            android:padding="8dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/inform_border"
            android:onClick="showDatePickerDeparture"
            android:textColor="@color/black"
            android:textColorHint="@color/grey"/>

        <TextView
            android:id="@+id/message_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textSize="16sp"
            android:visibility="gone"
            android:textColor="@color/black"
            android:textColorHint="@color/grey"/>
    </LinearLayout>


    <Button
        android:id="@+id/main_button"
        android:layout_width="351dp"
        android:layout_height="58dp"
        android:layout_marginTop="0dp"
        android:backgroundTint="@color/orange"
        android:layout_marginBottom="120dp"
        android:text="Найти Билет"
        app:layout_constraintBottom_toTopOf="@id/bottom_nav_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="18dp"/>

    <LinearLayout
        android:id="@+id/bottom_nav_bar"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:background="@color/darkblue"
        android:orientation="horizontal"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/button_favorites"
            android:layout_width="24dp"
            android:layout_height="39dp"
            android:layout_marginLeft="16dp"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:contentDescription="Избранное"
            android:src="@drawable/ic_favotire" />

        <ImageButton
            android:id="@+id/button_main"
            android:layout_width="24dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:contentDescription="Главная"
            android:src="@drawable/ic_main" />

        <ImageButton
            android:id="@+id/button_profile"
            android:layout_width="24dp"
            android:layout_height="42dp"
            android:layout_marginRight="22dp"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:contentDescription="Профиль"
            android:src="@drawable/ic_profile" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
