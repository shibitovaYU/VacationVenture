<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_marginBottom="16dp"
    android:background="@drawable/item_background"
    android:textColor="@color/black"
    android:textColorHint="@color/grey">


    <TextView
        android:id="@+id/recommendationBadge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@drawable/rounded_button_background"
        android:paddingLeft="12dp"
        android:paddingTop="6dp"
        android:paddingRight="12dp"
        android:paddingBottom="6dp"
        android:text="Рекомендовано для вас"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        android:visibility="gone" />

    <!-- Изображение ресторана, занимающее всю ширину -->
    <ImageView
        android:id="@+id/restaurantImage"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:contentDescription="Restaurant Image"
        android:layout_marginBottom="8dp" />

    <!-- Основная информация о ресторане -->
    <TextView
        android:id="@+id/restaurantName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="18sp"
        android:paddingBottom="4dp"
        android:text="Название ресторана"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/restaurantAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="4dp"
        android:text="Адрес ресторана"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/restaurantRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:text="Рейтинг: 4.5"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/restaurantMenuLink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Меню ресторана"
        android:textColor="@color/darkblue"
        android:textSize="16sp"
        android:paddingBottom="8dp" />

</LinearLayout>
